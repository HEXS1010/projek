       <script>
        gsap.registerPlugin(TextPlugin, ScrollTrigger); 

        gsap.to(".about-title", {
    scrollTrigger: {
      trigger: ".about-title",  
      start: "top 80%",        
      toggleActions: "play none none none"
    },
    duration: 4,
    text: "Bangun skill teknologi dari dasar hingga tingkat lanjutan ðŸš€ðŸš€"
  });

  gsap.to(".about-question", {
    scrollTrigger: {
      trigger: ".about-question",
      start: "top 80%",
      toggleActions: "play none none none"
    },
